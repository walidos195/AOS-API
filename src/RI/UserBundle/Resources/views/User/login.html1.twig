{% extends "::base.html.twig" %}

{% block title %}RIUserBundle:User:Login{% endblock %}
{% block stylesheets %}
    <script>
        window.setTimeout(function () {
            $(".alert").fadeTo(500, 0).slideUp(500, function () {
                $(this).remove();
            });
        }, 4000);
    </script>

    {% include 'RIAdvertBundle:Commun:bootstrap.html.twig' %}
{% endblock %}
{% block body %}
    {% include 'RIAdvertBundle:Commun:nav.html.twig' %}
     <div class="col-lg-push-1 col-md-10 col-sm-10 text-left contentp"> 



    


    {% if error %}
        <div class="alert alert-danger" role="alert">
            <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
            <strong>Echec!</strong>  {{ error.message }}
        </div>
    {% endif %}
    <h1>Page de connexion</h1>
    <form class="form-horizontal" action="{{ path('login_check') }}" method="post">

        <div class="form-group">
            {# Génération du label. #}
            <label class="col-sm-2 control-label" for="username">Pseudo:</label>
            <div class="col-sm-10">
                <input type="text" class="form-control" id="username" name="_username" value="{{ last_username }}" />

            </div>
        </div>
        <div class="form-group">
            {# Génération du label. #}
            <label class="col-sm-2 control-label" for="password">Mot de passe :</label>

            <div class="col-sm-10">
                <input type="password" id="password" class="form-control" name="_password" />
            </div>
        </div>
            <input type="submit" value="Connexion" class="btn btn-primary" />
    </form>
        {% include 'RIAdvertBundle:Commun:navright.html.twig' %}

        {% include 'RIAdvertBundle:Commun:foot.html.twig' %}

    {% endblock %}
