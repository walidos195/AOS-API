{% extends "::base.html.twig" %}

{% block title %}Editer votre Profil{% endblock %}
{% block stylesheets %}

    {% include 'RIAdvertBundle:Commun:bootstrap.html.twig' %}
{% endblock %}
{% block body %}
    {% include 'RIAdvertBundle:Commun:nav.html.twig' %}
     <div class="col-lg-push-1 col-md-10 col-sm-10 text-left contentp"> 


    <h1>Votre Profil:</h1>
    <div  >

        {{ form_start(form)}} 

        <div class="panel panel-default">
            <div class="panel-heading">
                <h3 class="panel-title">{{app.user.nom}} {{app.user.prenom}}</h3>
            </div>
            <div class="panel-body">
                <div class="row">
                    <div class="col-md-3 col-lg-3 " align="center"> <img alt="User Pic" src="http://babyinfoforyou.com/wp-content/uploads/2014/10/avatar-300x300.png" class="img-circle img-responsive"> </div>



                    <div class=" col-md-9 col-lg-9 "> 
                        <table class="table table-user-information">
                            <tbody>
                                <tr>
                                    <td>              {{ form_label(form.username, "Pseudo") }}{{ form_errors(form.username) }}</td>
                                    <td>{{form_widget(form.username, {'attr': {'class': 'form-control'}})}}</td>
                                </tr>
                                
                               
                                <tr>
                                    <td>              {{ form_label(form.nom, "Le nom") }}{{ form_errors(form.nom) }}</td>
                                    <td>{{form_widget(form.nom, {'attr': {'class': 'form-control'}})}}</td>
                                </tr>
                                <tr>
                                    <td>              {{ form_label(form.prenom, "Le pénom") }}{{ form_errors(form.prenom) }}</td>
                                    <td>{{form_widget(form.prenom, {'attr': {'class': 'form-control'}})}}</td>
                                </tr>
                                <tr>
                                <tr>
                                    <td>              {{ form_label(form.telephone, "Téléphone") }}{{ form_errors(form.telephone) }}</td>
                                    <td>{{form_widget(form.telephone, {'attr': {'class': 'form-control'}})}}</td>
                                </tr>
                                <tr>
                                    <td>              {{ form_label(form.mail, "E-mail") }}{{ form_errors(form.mail) }}</td>
                                    <td>{{form_widget(form.mail, {'attr': {'class': 'form-control'}})}}</td>
                                </tr>
                                <tr>
                                    <td>{{ form_label(form.skills, "Les compétences") }}{{ form_errors(form.skills) }}</td>
                                    <td>{{form_widget(form.skills)}}</td>
                                </tr>


                                </tr>

                            </tbody>
                        </table>

                        {{ form_widget(form.sub, {'attr': {'class': 'btn btn-primary'}}) }}
                        {{form_end(form)}}
                    </div>
                </div>
            </div>
            <div class="panel-footer">
                <a data-original-title="Broadcast Message" data-toggle="tooltip" type="button" class="btn btn-sm btn-primary"><i class="glyphicon glyphicon-envelope"></i></a>
                <span class="pull-right">
                    <a href="edit.html" data-original-title="Edit this user" data-toggle="tooltip" type="button" class="btn btn-sm btn-warning"><i class="glyphicon glyphicon-edit"></i></a>
                    <a data-original-title="Remove this user" data-toggle="tooltip" type="button" class="btn btn-sm btn-danger"><i class="glyphicon glyphicon-remove"></i></a>
                </span>
            </div>

        </div>
    </div>

    {% include 'RIAdvertBundle:Commun:navright.html.twig' %}

    {% include 'RIAdvertBundle:Commun:foot.html.twig' %}

{% endblock %}
